<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#f7f7f7"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/play_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/play_button"
        android:layout_toRightOf="@id/play_button"
        android:text="@string/attention"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black_shade"
        app:layout_constraintStart_toEndOf="@id/play_button"
        app:layout_constraintTop_toTopOf="@id/play_button" />

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/play_button"
        android:layout_toRightOf="@id/play_button"
        android:paddingBottom="10dp"
        android:text="Justin Baiber"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black_shade"
        app:layout_constraintStart_toStartOf="@id/song_name"
        app:layout_constraintTop_toBottomOf="@id/song_name" />

    <TextView
        android:id="@+id/released_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawableLeft="@drawable/star"
        android:layout_marginLeft="32dp"
        android:text="23456 users"
        android:drawablePadding="4dp"
        android:textColor="@color/black_shade"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/song_artist"
        app:layout_constraintStart_toEndOf="@+id/song_artist"
        app:layout_constraintTop_toBottomOf="@+id/song_name"
        android:drawableStart="@drawable/star" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>