<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blueman.ammusic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Activities.RegisterActivity"></activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:parentActivityName=".Activities.MusicListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="www.google.com"
                    android:pathPrefix="/Ngomaapp"
                    android:scheme="http" />
                <data
                    android:host="ngomaapp"
                    android:scheme="blueman" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.UserSettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".Activities.MusicListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.MusicListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_music_list"
            android:theme="@style/FullscreenTheme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.google.com"
                    android:pathPrefix="/ngomaapp"
                    android:scheme="http" />
                <data
                    android:host="ngomaapp"
                    android:scheme="blueman" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MusicPreferenceActivity" />
    </application>

</manifest>